<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sem3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/chango"
                android:padding="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="0dp"
                android:text="@string/Third_Semester"
                android:textColor="@color/head_color"
                android:textSize="30sp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/sem2"
                android:layout_marginTop="25dp"
                android:columnCount="1"
                android:padding="10dp"
                android:rowCount="6">

                <androidx.cardview.widget.CardView
                    android:id="@+id/mathsCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="10dp"
                    android:clickable="false"
                    android:focusable="true"
                    android:fontFamily="cursive"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="open_Sem3_Mathematics"
                    app:cardBackgroundColor="#BDBB86FC"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp">

                    <!--        This is Relative Layout of all hidden as well as not hidden mode-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_back_1">

                        <!--        This is Relative Layout of Shown -->
                        <RelativeLayout
                            android:id="@+id/mathsOriginal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <!-- Image/Logo of Mathematics -->
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="200dp"
                                android:paddingStart="10dp"
                                android:paddingEnd="0dp"
                                android:src="@drawable/maths"
                                tools:ignore="ContentDescription" />

                            <!--        Linear Layout for heading Mathematics -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:orientation="vertical">


                                <!--                            Heading Mathematics-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="cursive"
                                    android:paddingStart="30dp"
                                    android:paddingEnd="0dp"
                                    android:text="@string/mathematics"
                                    android:textAlignment="center"
                                    android:textAllCaps="false"
                                    android:textColor="@color/text_color"
                                    android:textSize="40sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </RelativeLayout>
                        <!--        Below this is the hidden mode -->


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/dsaCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="10dp"
                    android:clickable="false"
                    android:focusable="true"
                    android:fontFamily="cursive"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="open_Sem3_Dsa"
                    app:cardBackgroundColor="#BDBB86FC"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp">

                    <!--        This is Relative Layout of all hidden as well as not hidden mode-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_back_2">

                        <!--        This is Relative Layout of Shown -->
                        <RelativeLayout
                            android:id="@+id/dsaOriginal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <!-- Image/Logo of dsa -->
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="200dp"
                                android:padding="5dp"
                                android:src="@drawable/dsa"
                                tools:ignore="ContentDescription" />

                            <!--        Linear Layout for heading dsa -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:orientation="vertical">


                                <!--                            Heading dsa-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="cursive"
                                    android:paddingStart="30dp"
                                    android:paddingEnd="0dp"
                                    android:text="@string/dsa"
                                    android:textAlignment="center"
                                    android:textAllCaps="true"
                                    android:textColor="@color/text_color"
                                    android:textSize="40sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </RelativeLayout>
                        <!--        Below this is the hidden mode -->


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/oopsCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="10dp"
                    android:clickable="false"
                    android:focusable="true"
                    android:fontFamily="cursive"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="open_Sem3_Oops"
                    app:cardBackgroundColor="#BDBB86FC"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp">

                    <!--        This is Relative Layout of all hidden as well as not hidden mode-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_back_3">

                        <!--        This is Relative Layout of Shown -->
                        <RelativeLayout
                            android:id="@+id/oopsOriginal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <!-- Image/Logo of Mathematics -->
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="200dp"
                                android:src="@drawable/oops"
                                tools:ignore="ContentDescription" />

                            <!--        Linear Layout for heading oops -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:orientation="vertical">


                                <!--                            Heading oops-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="cursive"
                                    android:paddingStart="30dp"
                                    android:paddingEnd="0dp"
                                    android:text="@string/oops"
                                    android:textAlignment="center"
                                    android:textAllCaps="true"
                                    android:textColor="@color/text_color"
                                    android:textSize="40sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </RelativeLayout>
                        <!--        Below this is the hidden mode -->


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/deCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="10dp"
                    android:clickable="false"
                    android:focusable="true"
                    android:fontFamily="cursive"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="open_Sem3_De"
                    app:cardBackgroundColor="#BDBB86FC"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp">

                    <!--        This is Relative Layout of all hidden as well as not hidden mode-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_back_4">

                        <!--        This is Relative Layout of Shown -->
                        <RelativeLayout
                            android:id="@+id/deOriginal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <!-- Image/Logo of Mathematics -->
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="200dp"
                                android:src="@drawable/de"
                                tools:ignore="ContentDescription" />

                            <!--        Linear Layout for heading de -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:orientation="vertical">


                                <!--        Heading de -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="cursive"
                                    android:paddingStart="30dp"
                                    android:paddingEnd="0dp"
                                    android:text="@string/de"
                                    android:textAlignment="center"
                                    android:textAllCaps="true"
                                    android:textColor="@color/text_color"
                                    android:textSize="40sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </RelativeLayout>
                        <!--        Below this is the hidden mode -->


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/dosCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="10dp"
                    android:clickable="false"
                    android:focusable="true"
                    android:fontFamily="cursive"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="open_Sem3_Dos"
                    app:cardBackgroundColor="#BDBB86FC"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp">

                    <!--        This is Relative Layout of all hidden as well as not hidden mode-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_back_5">

                        <!--        This is Relative Layout of Shown -->
                        <RelativeLayout
                            android:id="@+id/dosOriginal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <!-- Image/Logo of dos -->
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="200dp"
                                android:src="@drawable/dos"
                                tools:ignore="ContentDescription" />

                            <!--        Linear Layout for heading dos -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:orientation="vertical">


                                <!--        Heading dos -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="cursive"
                                    android:paddingStart="30dp"
                                    android:paddingEnd="0dp"
                                    android:text="@string/dos"
                                    android:textAlignment="center"
                                    android:textAllCaps="true"
                                    android:textColor="@color/text_color"
                                    android:textSize="40sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </RelativeLayout>
                        <!--        Below this is the hidden mode -->


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>
        </RelativeLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-1720186780950212/6794701300">

    </com.google.android.gms.ads.AdView>
</RelativeLayout>
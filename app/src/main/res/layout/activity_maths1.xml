<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".maths1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/chango"
            android:padding="15dp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:text="@string/maths_books_m1"
            android:textColor="@color/head_color"
            android:textSize="30sp" />


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/sem1"
            android:layout_marginTop="150dp"
            android:columnCount="1"
            android:padding="10dp"
            android:rowCount="2">

            <androidx.cardview.widget.CardView
                android:id="@+id/matricsCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="10dp"
                android:clickable="false"
                android:focusable="true"
                android:fontFamily="cursive"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#BDBB86FC"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp">

                <!--        This is Relative Layout of all hidden as well as not hidden mode-->


                <!--        Linear Layout for heading Mathematics -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/card_back_1"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal|center"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:orientation="vertical">


                        <!--                            Heading Mathematics-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical|center"
                            android:fontFamily="cursive"
                            android:gravity="center|center_vertical|center_horizontal"
                            android:text="@string/Sem1Maths_matrices"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/text_color"
                            android:textSize="50sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/vectorSpaceCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="10dp"
                android:layout_marginTop="30dp"
                android:clickable="false"
                android:focusable="true"
                android:fontFamily="cursive"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#BDBB86FC"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/card_back_2"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal|center"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:orientation="vertical">


                        <!--                            Heading Mathematics-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical|center"
                            android:fontFamily="cursive"
                            android:gravity="center|center_vertical|center_horizontal"
                            android:text="@string/Sem1Maths_vector_space"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/text_color"
                            android:textSize="50sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </GridLayout>

    </RelativeLayout>

</ScrollView>
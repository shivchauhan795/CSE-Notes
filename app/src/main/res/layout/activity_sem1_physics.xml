<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDCECF"
    tools:context=".Sem1Physics">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button


                android:id="@+id/Sem1PhyU1"
                android:layout_width="225dp"
                android:layout_height="60dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="250dp"


                android:layout_marginBottom="15dp"

                android:foregroundGravity="center_vertical|center|center_horizontal"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="@string/unit_1"
                android:textColor="#040303"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:backgroundTint="#25BD9A"
                tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck,UsingOnClickInXml" />


            <Button


                android:id="@+id/Sem1PhyU2"
                android:layout_width="225dp"
                android:layout_height="60dp"


                android:layout_marginStart="90dp"

                android:layout_marginBottom="15dp"
                android:text="@string/unit_2"
                android:textColor="#040303"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:backgroundTint="#25BD9A"
                tools:ignore="UsingOnClickInXml" />

            <Button


                android:id="@+id/Sem1PhyU3"
                android:layout_width="225dp"
                android:layout_height="60dp"


                android:layout_marginStart="90dp"

                android:layout_marginBottom="15dp"
                android:text="@string/unit_3"
                android:textColor="#040303"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:backgroundTint="#25BD9A"
                tools:ignore="UsingOnClickInXml" />

            <Button

                android:id="@+id/Sem1PhyU4"
                android:layout_width="225dp"


                android:layout_height="60dp"
                android:layout_marginStart="90dp"
                android:layout_marginBottom="50dp"
                android:text="@string/unit_4"
                android:textColor="#040303"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:backgroundTint="#25BD9A"
                tools:ignore="UsingOnClickInXml" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>